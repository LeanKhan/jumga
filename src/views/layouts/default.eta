<!DOCTYPE html>
<html>
  <head lang="en">
    <title><%= title %></title>
    <meta name="description" content="Classified ads for AUN" />
    <!-- <link
          id="favicon"
          rel="icon"
          href="https://glitch.com/edit/favicon-app.ico"
          type="image/x-icon"
        /> -->
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <%~ E.includeFile("partials/links.eta") %>
  </head>

  <body>
    <div class="jumga-top-bar"></div>
    <header class="container" style="font-size: smaller">
      <nav class="navbar is-transparent">
        <div class="navbar-brand">
          <a class="navbar-item" href="/"> jumga </a>
          <div
            class="navbar-burger burger"
            data-target="navbarExampleTransparentExample"
          >
            <span></span>
            <span></span>
            <span></span>
          </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
          <div class="navbar-start">
            <a class="navbar-item" href="/shops/new">setup shop</a>
            <a class="navbar-item" href="/admin/dashboard">admin</a>
            <a class="navbar-item" href="/shops/dashboard">shop admin</a>
          </div>

          <div class="navbar-end">
            <div class="navbar-item">
              <% if (typeof user != 'undefined') { %>
              <div>
                <b>Hi, <%= user.firstname %> &nbsp;</b>
                <% if (user.isAdmin) { %>
                <span>ADMIN</span>
                <% } else if (user.hasShop) { %>
                <span>MERCHANT</span>
                <% } else { %>
                <span>SHOPPER</span>
                <% } %>
              </div>
              <% } else { %> LOGIN or SIGNUP <% } %> <% if (typeof pageCount !=
              'undefined') { %>
              <b>viewd page => <%= pageCount %> &nbsp;</b>
              <% } %>

              <div class="navbar-item has-dropdown is-hoverable">
                <a class="navbar-link" href="#">OPTIONS</a>
                <div class="navbar-dropdown is-boxed">
                  <a class="navbar-item" href="/signin">signin</a>
                  <a class="navbar-item" href="/signup">signup</a>
                  <a class="navbar-item" href="/signout">signout</a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>

    <!-- ALERTS PARTIALS HERE -->
    <%~ E.includeFile("partials/alerts.eta", {alerts}) %>

    <section class="app-main">
      <div><%~ body %></div>
    </section>

    <%~ E.includeFile("partials/scripts.eta", {env, route_name}) %>

    <footer style="padding: 1em">
      <div class="container text-center text-grey">jumga</div>
    </footer>
  </body>
</html>
